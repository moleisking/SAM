<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rowTag"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rowHeader"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/imgAvatar"
        android:layout_width="@dimen/image_small_size"
        android:layout_height="@dimen/image_small_size"
        android:scrollbars="none"
        android:scaleType="fitCenter"
        android:src="@drawable/default_avatar"
        android:maxWidth="@dimen/image_small_size"
        android:maxHeight="@dimen/image_small_size"
        android:paddingLeft="@dimen/row_user_padding_left">
    </ImageView>

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/txtItemName"
        style="?android:attr/dropDownItemStyle"
        android:textAppearance="?android:attr/textAppearanceLargePopupMenu"
        android:singleLine="true"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/listPreferredItemHeight"
        android:ellipsize="marquee"
        android:text="MyName">
    </TextView>
    </LinearLayout>

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/txtItemSummary"
        style="?android:attr/dropDownItemStyle"
        android:textAppearance="?android:attr/textAppearanceLargePopupMenu"
        android:singleLine="true"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/listPreferredItemHeight"
        android:ellipsize="marquee"
        android:text="MySummary">
    </TextView>

    <TextView
        android:id="@+id/txtItemConversationId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:text="MyConversation">
    </TextView>

</LinearLayout>