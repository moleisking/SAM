                    android:id="@+id/rad1km"
                    android:text="1km" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rad5km"
                    android:text="5km" />

                <RadioButton
